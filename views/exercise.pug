extends exerciseBase 

mixin content2(name, date, location, img, price, trainer, description)
  main.cvicenie__bg2
    section.section__header2
      .cvicenie__heading
        h2.cvicenie__title
          span= name
    img.cvicenie__img2(src=`/img/skupArea/${img}`)
    .content
      .heading-box__group.group1
        .heading-box__detail
          img.heading-box__icon(src='https://img.icons8.com/pastel-glyph/64/000000/date-to--v2.png')
          p.info= date
        .heading-box__detail
          img.heading-box__icon(src='https://img.icons8.com/ios-filled/50/000000/marker.png')
          p.info= location
      .heading-box__group.group2
        .heading-box__detail
          img.heading-box__icon(src='https://img.icons8.com/wired/64/000000/flex-biceps.png')
          p.info=`${price}€ / na mesiac`
        .heading-box__detail
          img.heading-box__icon(src='https://img.icons8.com/ios-filled/50/000000/personal-trainer.png')
          p.info= trainer
      p.cvicenie__description2= description

block content
  - if (!exercise.isHorizontal)
    +content2(exercise.name, exercise.date, exercise.location, exercise.imageCover, exercise.price, exercise.trainer, exercise.description)

  - else 
    main.cvicenie__bg
      section.section__header
        .cvicenie__heading
          h2.cvicenie__title
            span= exercise.name
          .heading-box__group
            .heading-box__detail
              img.heading-box__icon(src='https://img.icons8.com/pastel-glyph/64/000000/date-to--v2.png')
              p.info= exercise.date
            .heading-box__detail
              img.heading-box__icon(src='https://img.icons8.com/ios-filled/50/000000/marker.png')
              p.info= exercise.location
      img.cvicenie__img(src=`/img/skupArea/${exercise.imageCover}`)
      .lower__icons.heading-box__group
        .heading-box__detail
          img.heading-box__icon(src='https://img.icons8.com/wired/64/000000/flex-biceps.png')
          p.info=`${exercise.price}€ / na mesiac`
        .heading-box__detail
          img.heading-box__icon(src='https://img.icons8.com/ios-filled/50/000000/personal-trainer.png')
          p.info= exercise.trainer
      p.cvicenie__description= exercise.description

