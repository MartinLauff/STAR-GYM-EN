mixin exerciseCard(exercise)
  .exercises__card
    a.exercise__link(href=`/group-exercises/${exercise.slug}`)
      .exercises__image(style=`background: linear-gradient(rgba(0, 0, 0, 0.555), rgba(0, 0, 0, 0.555)), url(/img/skupArea/${exercise.imageCover}); background-position: center; background-size: cover;`)
        button.animate__fadeInDown.animate__animated Find out more
      .exercise__name
        span= exercise.name